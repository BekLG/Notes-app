<html lang="en">

    <%- include('./partials/head.ejs') %>

    <body id="htmlbody">
        <div class="inner-container">
            <%- include('./partials/header.ejs') %>
        
        <div class="create-note content">
    <form action="/" method="POST">
        <label class="label txt">Note title:</label>
